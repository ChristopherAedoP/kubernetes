{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "omsWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "OMS log analytics workspace name"
      }
    }
  },
  "variables": {
    "apiVersion": {
      "oms": "2017-03-15-preview",
      "omssolutions": "2015-11-01-preview"
    },
    "container": {
      "name": "[concat('Containers', '(', parameters('omsWorkspaceName'), ')')]",
      "galleryName": "Containers"
    },
    "omsLogAnalyticsConfiguration": {
      "omsWorkspaceName": "[parameters('omsWorkspaceName')]",
      "omsServiceTier": "Free",
      "omsDataRetention": 7
    }
  },
  "resources": [],
  "outputs": {
    "workspaceId": {
      "type": "string",
      "value": "[reference(concat('Microsoft.OperationalInsights/workspaces/', variables('omsLogAnalyticsConfiguration').omsWorkspaceName), variables('apiVersion').oms).customerId]"
    },
    "primaryKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces/', variables('omsLogAnalyticsConfiguration').omsWorkspaceName), variables('apiVersion').oms).primarySharedKey]"
    }
  }
}
